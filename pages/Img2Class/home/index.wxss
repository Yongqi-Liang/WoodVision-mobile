/* 容器样式（可选） */
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  padding: 20px;
}

/* 按钮整体样式 */
.btn_StartVision {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 400rpx;
  gap: 5px;
  background: #07C160; /* 绿色背景 */
  border-radius: 20px;  /* 圆形按钮 */
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

/* 按钮按下效果 */
.btn_StartVision:active {
  transition: 0.5s;
  background-color: #07c16172;
}

/* 图片样式 */
.btn-image {
  width: 128rpx;
  height: 128rpx;
}

/* 文字样式 */
.btn-text {
  margin-top: 10rpx;
  color: white;
  font-size: 28rpx;
}